<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oss.ossv1.gui.controller.RegisterController"
            prefWidth="450" prefHeight="350">
    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30">
        <Label text="User Registration" style="-fx-font-size: 20px;"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Label fx:id="messageLabel" textFill="red"/>
        <Button text="Register" onAction="#handleRegister"/>
        <Hyperlink text="Back to Login" onAction="#switchToLogin"/>
    </VBox>
</AnchorPane>
