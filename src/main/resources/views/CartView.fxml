<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.oss.ossv1.gui.controller.CartController"
      spacing="10" alignment="TOP_CENTER" padding="20">

    <Label text="Your Shopping Cart" style="-fx-font-size: 24px;"/>

    <TableView fx:id="cartTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="nameColumn" text="Product" prefWidth="200"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="totalColumn" text="Total" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Label text="Total: " style="-fx-font-size: 16px;"/>
        <Label fx:id="totalLabel" text="$0.00" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="removeButton" text="Remove Selected"/>
        <Button fx:id="checkoutButton" text="Checkout"/>
        <Button fx:id="backButton" text="Continue Shopping"/>
    </HBox>

</VBox>
